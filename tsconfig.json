{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "lib": ["dom", "es2021"],
        "paths": {
            "@app/*": ["src/*"]
        }
    }
}
